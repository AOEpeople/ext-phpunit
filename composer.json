{
    "name": "oliverklee/phpunit",
    "type": "typo3-cms-extension",
    "description": "Unit testing for TYPO3. Includes PHPUnit 4.8, Selenium, a BE test runner module, a CLI test runner, PhpStorm integration and a testing framework.",
    "keywords": [
        "TYPO3",
        "TDD",
        "PHPUnit"
    ],
    "homepage": "https://forge.typo3.org/projects/extension-phpunit",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "role": "Developer",
            "homepage": "https://www.oliverklee.de"
        }
    ],
    "support": {
        "issues": "https://github.com/oliverklee/ext-phpunit/issues",
        "source": "https://github.com/oliverklee/ext-phpunit"
    },
    "license": "GPL-3.0+",
    "require": {
        "php": ">=5.5.0,<8.0",
        "typo3/cms-core": "^7.6 || ^8.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "phpunit/phpunit-selenium": "^2",
        "mikey179/vfsStream": "^1"
    },
    "autoload": {
        "classmap": [
            "Classes",
            "Tests"
        ]
    },
    "replace": {
        "phpunit": "self.version",
        "typo3-ter/phpunit": "self.version"
    }
}
